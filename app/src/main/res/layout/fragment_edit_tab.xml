<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditTabFragment">

    <data>

        <variable
            name="editTabViewModel"
            type="com.simplu.transcribetab.edittab.EditTabViewModel" />

        <variable
            name="mediaPlayerViewModel"
            type="com.simplu.transcribetab.mediaplayer.MediaPlayerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="0dp"
            android:text="@string/title"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></EditText>

        <EditText
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="@string/artist"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"></EditText>

        <EditText
            android:id="@+id/arranger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="Arranged By"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/artist"></EditText>

        <EditText
            android:id="@+id/tuning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="tuning"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arranger"></EditText>

        <com.simplu.transcribetab.edittab.EditTabView
            android:id="@+id/edit_tablature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tuning">

        </com.simplu.transcribetab.edittab.EditTabView>

        <LinearLayout
            android:id="@+id/section_number_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_tablature">

            <Button
                android:id="@+id/btn_prev_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> editTabViewModel.previousSection()}"
                android:text="l"></Button>

            <EditText
                android:id="@+id/current_section_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@{editTabViewModel.currentSectionNum}"
                android:textStyle="bold"></EditText>

            <TextView
                android:id="@+id/total_section_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{editTabViewModel.totalSectionsNum.toString()}"
                android:textSize="12sp"></TextView>

            <Button
                android:id="@+id/btn_next_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> editTabViewModel.nextSection()}"
                android:text="r"></Button>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section_number_container">

            <TextView
                android:id="@+id/txt_section_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{editTabViewModel.currentSectionTime}"
                android:onClick="@{() -> editTabViewModel.onSkipTo()}">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#c7c7c7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@id/media_player"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:id="@+id/string_input_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/input_row_1"
                    layout="@layout/input_buttons_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></include>

                <include
                    android:id="@+id/input_row_2"
                    layout="@layout/input_buttons_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></include>

                <include
                    android:id="@+id/input_row_3"
                    layout="@layout/input_buttons_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></include>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/column_controller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_section_btn"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="+"></Button>

                <Button
                    android:id="@+id/btn_set_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="time"></Button>

                <Button
                    android:id="@+id/btn_clr_column"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="clr"></Button>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/media_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"></FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>