<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mediaPlayerViewModel"
            type="com.simplu.transcribetab.mediaplayer.MediaPlayerViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="16dp"
        android:background="#424242"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/song_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="0:00"
                android:textColor="@color/white"
                android:text="@{mediaPlayerViewModel.currentTimeString}" />

            <SeekBar
                android:id="@+id/song_seek_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="12" />

            <TextView
                android:id="@+id/song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{mediaPlayerViewModel.durationString}" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/prev_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MediaPlayerButton"
                android:src="@drawable/ic_fast_rewind_white_24dp"/>

            <ImageButton
                android:id="@+id/play_pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> mediaPlayerViewModel.onPlayPause()}"
                app:srcCompat="@drawable/ic_play_arrow_white_24dp"
                style="@style/MediaPlayerButton" />

            <ImageButton
                android:layout_marginLeft="@+id/forw_btn"
                android:id="@+id/prev_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MediaPlayerButton"
                app:srcCompat="@drawable/ic_fast_forward_white_24dp">

            </ImageButton>

            <Button
                android:id="@+id/set_skip_to"
                style="@style/MediaPlayerButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{() -> mediaPlayerViewModel.setSkipTo()}"
                android:text="S"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/go_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="@{() -> mediaPlayerViewModel.onGoTo()}"
                android:text="Go"
                android:textColor="@color/white"
                style="@style/MediaPlayerButton"/>
            <Button
                android:id="@+id/song_rate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1x"
                android:textColor="@color/white"
                style="@style/MediaPlayerButton"/>
        </LinearLayout>
    </LinearLayout>
</layout>
